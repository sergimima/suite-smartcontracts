# ===== DEPLOYMENT CONFIGURATION =====
# Copy this file to .env and fill in your values
# NEVER commit .env to git - it contains sensitive information

# === WALLET CONFIGURATION ===
# Option 1: Private Key (NOT RECOMMENDED for production)
# PRIVATE_KEY=your_private_key_here

# Option 2: Mnemonic (NOT RECOMMENDED for production)  
# MNEMONIC=your twelve word mnemonic phrase here

# Option 3: Keystore (RECOMMENDED)
# KEYSTORE_PATH=./keystore/wallet.json
# KEYSTORE_PASSWORD=your_keystore_password

# === NETWORK CONFIGURATION ===
# Ethereum Mainnet
ETH_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY

# Ethereum Sepolia Testnet
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Polygon Mainnet
POLYGON_RPC_URL=https://polygon-mainnet.alchemyapi.io/v2/YOUR_API_KEY

# Polygon Mumbai Testnet
MUMBAI_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_API_KEY

# Arbitrum One
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Optimism
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# === CONTRACT CONFIGURATION ===
# Initial owner of the deployed contract (optional - defaults to deployer)
INITIAL_OWNER=0x090378a9c80c5E1Ced85e56B2128c1e514E75357

# === VERIFICATION CONFIGURATION ===
# Etherscan API Key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Polygonscan API Key
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# === GAS CONFIGURATION ===
# Gas price in gwei (optional)
GAS_PRICE=20

# Gas limit (optional)
GAS_LIMIT=3000000

# === DEPLOYMENT OPTIONS ===
# Set to true to automatically verify contract after deployment
AUTO_VERIFY=true

# Set to true to save deployment artifacts
SAVE_ARTIFACTS=true
